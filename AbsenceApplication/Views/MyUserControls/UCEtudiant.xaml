<UserControl x:Class="AbsenceApplication.Views.MyUserControls.UCEtudiant"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AbsenceApplication.Views.MyUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="0,10,0,0" Width="124" Grid.Row="1" Height="150" VerticalAlignment="Top">
            <Button x:Name="btnAdd" 
                Content="Ajouter" 
                Height="30" Width="115" Margin="0,10,0,10"/>
            <Button x:Name="btnEdit" 
                Content="Editer" 
                Height="30" Width="115" Margin="0,10,0,10"/>
            <Button x:Name="btnDelete" 
                Content="Supprimer" 
                Height="30" Width="115" Margin="0,10,0,10"/>

        </StackPanel>
        <DataGrid Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Students}"/>
        <Label Grid.Column="1" Content="Gestion etudiants" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
