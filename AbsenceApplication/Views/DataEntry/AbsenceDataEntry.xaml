<Window x:Class="AbsenceApplication.Views.DataEntry.AbsenceDataEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbsenceApplication.Views.DataEntry"
        mc:Ignorable="d"
        Title="AbsenceDataEntry" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="295*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="131*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Id" HorizontalAlignment="Left" Margin="20,54,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Id}" HorizontalAlignment="Left" Margin="60,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="510" Grid.Column="1"/>
        <Button x:Name="btnSave" Grid.Column="1" Content="Enregistrer" HorizontalAlignment="Left" Margin="95,12,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Button x:Name="btnCancel" Grid.Column="1" Content="Annuler" HorizontalAlignment="Left" Margin="215,12,0,0" Grid.Row="2" VerticalAlignment="Top"/>

    </Grid>
</Window>
